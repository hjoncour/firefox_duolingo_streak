{
  "manifest_version": 3,
  "name": "Duolingo Streak Counter",
  "version": "1.0",
  "description": "Track duolingo streak",
  "permissions": ["activeTab", "background", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/streak_owl.png",
      "48": "assets/streak_owl.png",
      "128": "assets/streak_owl.png"
    }
  },
  "icons": {
    "16": "assets/streak_owl.png",
    "48": "assets/streak_owl.png",
    "128": "assets/streak_owl.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  }
}
  